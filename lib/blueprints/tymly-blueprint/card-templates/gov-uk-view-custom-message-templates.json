{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "color": "accent",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "View Custom Message Templates"
        }
      ]
    },
    {
      "id": "messageType",
      "type": "TextBlock",
      "text": "SMS Templates",
      "size": "medium",
      "weight": "bolder"
    },
    {
      "type": "TextBlock",
      "showWhen": "data.smsTemplates.length === 0",
      "text": "No SMS Templates Found"
    },
    {
      "id": "smsTemplateList",
      "type": "List",
      "arrayPath": "data.smsTemplates",
      "templates": {
        "label": "Message: {{ item.message }}",
        "sublabel": "Created: {{ item.created.split('T')[0] }} -- Created By: {{ item.createdBy }}"
      }
    },
    {
      "id": "messageType",
      "type": "TextBlock",
      "text": "Email Templates",
      "size": "medium",
      "weight": "bolder"
    },
    {
      "type": "TextBlock",
      "showWhen": "data.mailTemplates.length === 0",
      "text": "No Mail Templates Found"
    },
    {
      "id": "mailTemplateList",
      "type": "List",
      "arrayPath": "data.mailTemplates",
      "templates": {
        "label": "Message: {{ item.message }} Subject: {{ item.subject }}",
        "sublabel": "Created: {{ item.created.split('T')[0] }} Created By: {{ item.createdBy }}"
      }
    }
  ],
  "actions": [
    {
      "type": "Action.Cancel",
      "title": "Close"
    }
  ],
  "templateMeta": {
    "name": "gov-uk-notifications",
    "title": "View Custom Message Template",
    "category": "govUkNotify"
  }
}
