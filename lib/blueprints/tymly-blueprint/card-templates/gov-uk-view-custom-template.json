{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "color": "accent",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "{{ data.name || 'This template has no name' }} - {{ { mail: 'Email template', sms: 'Text message template' }[data.messageType] }}"
        }
      ]
    },
    {
      "type": "Container",
      "bordered": true,
      "shadowed": true,
      "spacing": "none",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "Message Summary"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Status",
              "value": "{{ data.status }}",
              "choices": [
                {
                  "title": "Sent",
                  "value": "SENT"
                },
                {
                  "title": "Sending on event",
                  "value": "SEND_ON_EVENT"
                },
                {
                  "title": "Draft",
                  "value": "DRAFT"
                },
                {
                  "title": "Pending",
                  "value": "PENDING"
                }
              ]
            },
            {
              "showWhen": "data.messageType === 'mail'",
              "title": "Subject",
              "value": "{{ data.subject }}"
            },
            {
              "title": "Message Content",
              "value": "{{ data.message }}"
            }
          ]
        },
        {
          "showWhen": "data.messageType === 'sms'",
          "type": "TextBlock",
          "size": "small",
          "weight": "lighter",
          "text": "{{ data.message.length }} characters"
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "title": "Edit message",
              "type": "Action.PushCard",
              "stateMachineName": "tymly_editGovUkCustomTemplate_1_0",
              "input": {
                "customTemplateId": "$.id"
              }
            },
            {
              "title": "See change history",
              "type": "Action.PushCard",
              "stateMachineName": "tymly_govUkCustomTemplateAuditTrail_1_0",
              "input": {
                "customTemplateId": "$.id",
                "name": "$.name"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "bordered": true,
      "shadowed": true,
      "spacing": "none",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "Recipients"
        },
        {
          "showLaunches": true,
          "showWhen": "data.messageType === 'mail'",
          "type": "Table",
          "arrayPath": "data.recipients",
          "notFoundText": "There are no recipients",
          "columns": [
            {
              "title": "Email address",
              "field": "recipient"
            }
          ]
        },
        {
          "showLaunches": true,
          "showWhen": "data.messageType === 'sms'",
          "type": "Table",
          "arrayPath": "data.recipients",
          "notFoundText": "There are no recipients",
          "columns": [
            {
              "title": "Phone number",
              "field": "recipient"
            }
          ]
        },
        {
          "type": "ActionSet",
          "actions": [
            {
              "title": "Add recipient",
              "type": "Action.PushCard",
              "stateMachineName": "tymly_addGovUkCustomTemplateRecipient_1_0",
              "input": {
                "customTemplateId": "$.id"
              }
            },
            {
              "title": "Import recipients",
              "type": "Action.PushCard",
              "stateMachineName": "tymly_importGovUkCustomTemplateRecipients_1_0",
              "input": {
                "customTemplateId": "$.id"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "bordered": true,
      "shadowed": true,
      "spacing": "none",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "Pricing"
        },
        {
          "showWhen": "data.messageType === 'sms'",
          "type": "TextBlock",
          "text": "Each message is {{ data.messageRates.numPages }} page{{ data.messageRates.numPages === 1 ? '' : 's' }}",
          "spacing": "none"
        },
        {
          "showWhen": "data.messageType === 'sms'",
          "type": "TextBlock",
          "text": "{{ data.messageRates.totalMessages }} message{{ data.messageRates.totalMessages === 1 ? '' : 's' }} to be sent",
          "spacing": "none"
        },
        {
          "showWhen": "data.messageType === 'sms'",
          "type": "TextBlock",
          "text": "Per message rate is {{ data.messageRates.smsMessageRatePence }} pence (plus VAT)",
          "spacing": "none"
        },
        {
          "showWhen": "data.messageType === 'sms'",
          "type": "TextBlock",
          "text": "Total cost will be Â£{{ data.messageRates.totalCostPounds }} (plus VAT)",
          "spacing": "none"
        },
        {
          "showWhen": "data.messageType === 'mail'",
          "type": "TextBlock",
          "text": "{{ data.recipients.length }} email{{ data.recipients.length === 1 ? '' : 's' }} to be sent",
          "spacing": "none"
        },
        {
          "showWhen": "data.messageType === 'mail'",
          "type": "TextBlock",
          "text": "It's free to send emails",
          "spacing": "none"
        },
        {
          "type": "Separator"
        },
        {
          "type": "TextBlock",
          "text": "To see more information on pricing, <a href='https://www.notifications.service.gov.uk/pricing' target='_blank'>click here</a>.",
          "spacing": "none"
        }
      ]
    },
    {
      "type": "Container",
      "bordered": true,
      "shadowed": true,
      "spacing": "none",
      "showWhen": "data.sendConfigs.length > 0",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "Send Details"
        },
        {
          "id": "sendConfigList",
          "type": "List",
          "arrayPath": "data.sendConfigs",
          "templates": {
            "label": "{{ data.availableEvents.find(e => e.key === item.event).description }}",
            "sublabel": [
              "{{ item.offsetLength ? item.offsetLength + item.offsetType.toLowerCase() + 'delay' : 'Send Immediately'}}"
            ]
          }
        }
      ]
    },
    {
      "showWhen": "(data.status === 'SENT' || data.status === 'SEND_ON_EVENT') && data.sendReceipts.length > 0",
      "type": "Container",
      "bordered": true,
      "shadowed": true,
      "spacing": "none",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "Send Receipts"
        },
        {
          "type": "Table",
          "arrayPath": "data.sendReceipts",
          "columns": [
            {
              "title": "Recipient",
              "field": "recipient"
            },
            {
              "title": "Date/time",
              "field": "modified",
              "format": "formatDate(item.modified, 'DD MMM YYYY HH:mm')"
            },
            {
              "title": "Status",
              "field": "statusCode",
              "format": "item.statusCode !== '201' ? `Error: ${item.error}` : 'Sent'"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Cancel",
      "title": "Close"
    },
    {
      "title": "Get Ready to Send",
      "type": "Action.ReplaceCard",
      "showWhen": "data.status !== 'SENT'",
      "stateMachineName": "tymly_getReadyToSendGovUkCustomTemplate_1_0",
      "input": {
        "id": "$.id",
        "availableEvents": "$.availableEvents"
      }
    }
  ],
  "templateMeta": {
    "name": "gov-uk-view-custom-template",
    "title": "${name}",
    "category": "govUkNotify"
  }
}
