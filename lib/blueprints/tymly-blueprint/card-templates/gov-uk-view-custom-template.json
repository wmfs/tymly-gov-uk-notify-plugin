{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "color": "accent",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "Custom Message Template"
        }
      ]
    },
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Message Summary"
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Status",
          "value": "{{ data.status }}"
        },
        {
          "title": "Message Type",
          "value": "{{ data.messageType }}"
        },
        {
          "showWhen": "data.messageType === 'mail'",
          "title": "Subject",
          "value": "{{ data.subject }}"
        },
        {
          "title": "Message Content",
          "value": "{{ data.message }}"
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "title": "Edit message",
          "showWhen": "data.status === 'DRAFT' || data.status === 'PENDING'",
          "type": "Action.PushCard",
          "stateMachineName": "tymly_editGovUkCustomTemplate_1_0",
          "input": {
            "customTemplateId": "$.id"
          }
        }
      ]
    },
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Recipients"
    },
    {
      "showLaunches": true,
      "showWhen": "data.messageType === 'mail'",
      "type": "Table",
      "arrayPath": "data.recipients",
      "notFoundText": "There are no recipients",
      "columns": [
        {
          "title": "Email address",
          "field": "emailAddress"
        }
      ]
    },
    {
      "showLaunches": true,
      "showWhen": "data.messageType === 'sms'",
      "type": "Table",
      "arrayPath": "data.recipients",
      "notFoundText": "There are no recipients",
      "columns": [
        {
          "title": "Phone number",
          "field": "phoneNumber"
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "title": "Add recipient",
          "showWhen": "data.status === 'DRAFT' || data.status === 'PENDING'",
          "type": "Action.PushCard",
          "stateMachineName": "tymly_addGovUkCustomTemplateRecipient_1_0",
          "input": {
            "customTemplateId": "$.id"
          }
        },
        {
          "title": "Import recipients",
          "showWhen": "data.status === 'DRAFT' || data.status === 'PENDING'",
          "type": "Action.PushCard",
          "stateMachineName": "tymly_importGovUkCustomTemplateRecipients_1_0",
          "input": {
            "customTemplateId": "$.id"
          }
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "none",
      "color": "warning",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "Pricing"
        },
        {
          "showWhen": "data.messageType === 'sms'",
          "type": "TextBlock",
          "text": "Each message is {{ data.messageRates.numPages }} pages",
          "spacing": "none"
        },
        {
          "showWhen": "data.messageType === 'sms'",
          "type": "TextBlock",
          "text": "{{ data.messageRates.totalMessages }} message{{ data.messageRates.totalMessages === 1 ? '' : 's' }} to be sent",
          "spacing": "none"
        },
        {
          "showWhen": "data.messageType === 'sms'",
          "type": "TextBlock",
          "text": "Per message rate is £{{ data.messageRates.smsMessageRate }} + VAT",
          "spacing": "none"
        },
        {
          "showWhen": "data.messageType === 'sms'",
          "type": "TextBlock",
          "text": "Total cost will be £{{ data.messageRates.totalCost }} + VAT",
          "spacing": "none"
        },
        {
          "showWhen": "data.messageType === 'mail'",
          "type": "TextBlock",
          "text": "{{ data.recipients.length }} email{{ data.recipients.length === 1 ? '' : 's' }} to be sent",
          "spacing": "none"
        },
        {
          "showWhen": "data.messageType === 'mail'",
          "type": "TextBlock",
          "text": "It's free to send emails",
          "spacing": "none"
        },
        {
          "type": "Separator"
        },
        {
          "type": "TextBlock",
          "text": "To see more information on pricing, <a href='https://www.notifications.service.gov.uk/pricing' target='_blank'>click here</a>.",
          "spacing": "none"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Cancel",
      "title": "Close"
    },
    {
      "title": "Send",
      "showWhen": "data.recipients.length > 0 && (data.status === 'DRAFT' || data.status === 'PENDING')",
      "type": "Action.Submit"
    }
  ],
  "templateMeta": {
    "name": "gov-uk-view-custom-template",
    "title": "View Custom Message Template",
    "category": "govUkNotify"
  }
}
