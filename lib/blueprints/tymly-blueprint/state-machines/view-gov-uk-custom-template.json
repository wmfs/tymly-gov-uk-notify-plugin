{
  "Comment": "View custom template",
  "name": "View custom template",
  "version": "1.0",
  "categories": [
    "govUkNotify"
  ],
  "StartAt": "FindingTemplate",
  "States": {
    "FindingTemplate": {
      "Type": "Task",
      "InputPath": "$.customTemplateId",
      "Resource": "module:findingById",
      "ResourceConfig": {
        "modelId": "tymly_govUkCustomTemplates"
      },
      "ResultPath": "$",
      "Next": "FindingRecipients"
    },
    "FindingRecipients": {
      "Type": "Task",
      "InputPath": "$.customTemplateId",
      "Resource": "module:listCustomTemplateRecipients",
      "ResultPath": "$.recipients",
      "Next": "CalculateMessageRates"
    },
    "CalculateMessageRates": {
      "Type": "Task",
      "Parameters": {
        "customTemplateId.$": "$.customTemplateId",
        "messageType.$": "$.messageType",
        "message.$": "$.message",
        "numRecipients.$": "$.recipients.length"
      },
      "Resource": "module:calculateMessageRates",
      "ResultPath": "$.messageRates",
      "Next": "AwaitingHumanInput"
    },
    "AwaitingHumanInput": {
      "Type": "Task",
      "Resource": "module:awaitingHumanInput",
      "ResourceConfig": {
        "uiName": "tymly_govUkViewCustomTemplate",
        "dataPath": "$"
      },
      "Next": "Send"
    },
    "Send": {
      "Type": "Task",
      "Parameters": {
        "recipients.$": "$.recipients",
        "templateName.$": "$.templateName",
        "customTemplateId.$": "$.id"
      },
      "Resource": "module:sendingCustomMessageViaService",
      "End": true
    }
  },
  "restrictions": [
    {
      "roleId": "tymly_govUkNotifyAdmin",
      "allows": [
        "*"
      ]
    }
  ]
}
